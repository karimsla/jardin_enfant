{% extends 'base.html.twig' %}

{% block body %}
    <h1>Abonnements list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Type</th>
                <th>Etat</th>
                <th>Montant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for abonnement in abonnements %}
            <tr>
                <td><a href="{{ path('abonnement_show', { 'id': abonnement.id }) }}">{{ abonnement.id }}</a></td>
                <td>{% if abonnement.date %}{{ abonnement.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ abonnement.type }}</td>
                <td>{{ abonnement.etat }}</td>
                <td>{{ abonnement.montant }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('abonnement_show', { 'id': abonnement.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('abonnement_edit', { 'id': abonnement.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('abonnement_new') }}">Create a new abonnement</a>
        </li>
    </ul>
{% endblock %}

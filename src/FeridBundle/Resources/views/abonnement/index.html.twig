{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des abonnements</h1>

    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Type</th>
                <th>Etat</th>
                <th>Montant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for abonnement in abonnements %}
            <tr>
                <td><a href="{{ path('abonnement_show', { 'id': abonnement.id }) }}">{{ abonnement.id }}</a></td>
                <td>{% if abonnement.date %}{{ abonnement.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ abonnement.type }}</td>
                <td>{{ abonnement.etat }}</td>
                <td>{{ abonnement.montant }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-dark" href="{{ path('abonnement_show', { 'id': abonnement.id }) }}">show</a>
                        </li>
                        <li>
                            <a class="btn btn-primary" href="{{ path('abonnement_edit', { 'id': abonnement.id }) }}">edit</a>

                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <center>
            <a class=" btn  btn-dark" href="{{ path('abonnement_new') }}">Cr√©er un abonnement</a>
    </center>
{% endblock %}

{% extends 'back.html.twig' %}
{% block nav %}
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
        <div class="container-fluid">
            <center>    <h1>Ajouter un trajet</h1></center>
        </div></div>
{% endblock nav %}

{% block body %}
<br>
<center>

    <br>
    <div class="col-md-6 grid-margin stretch-card" bis_skin_checked="1">
        <div class="card" bis_skin_checked="1">
            <div class="card-body" bis_skin_checked="1">
                <form class="form-sample" method="post">
                    <div class="form-group" bis_skin_checked="1">
                        <label  for="exampleInputName1">Adresse</label>
                        {{ form_widget(form.adresse,{'attr': {'class': 'form-control '}})}}
                    </div>
                    <div class="form-group" bis_skin_checked="1">
                        <label  for="exampleInputName1">Heure</label>
                        {{ form_widget(form.heure,{'attr': {'class': 'form-control '}})}}
                    </div>
                    <div class="form-group" bis_skin_checked="1">
                        <label  for="exampleInputName1">Heure</label>
                        {{ form_widget(form.chauffeur,{'attr': {'class': 'form-control '}})}}
                    </div>

                    <input type="submit" value="Creer" />

                </form>
            </div>
        </div>
    </div>
</center>
    <ul>
        <li>
            <a href="{{ path('trajet_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}

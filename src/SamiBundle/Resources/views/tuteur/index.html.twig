{% extends 'back.html.twig' %}

{% block nav %}
<div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
    <div class="container-fluid">
        <center><h1>Liste des tuteurs</h1></center>

    </div></div>

{% endblock nav %}

{% block body %}
    <br>

    <div class="form-row" style="margin-left: 50px">
        <a class="btn btn-outline-success" href="{{ path('tuteur_new') }}">Ajouter un tuteur</a>
    </div>
    <br><br>
    <div class="form-row col-md-12">
        {% for tuteur in tuteurs %}
            <div class="form-group col-md-4">
                <div class="cardd" onclick="location.href='{{ path('tuteur_show', { 'id': tuteur.id }) }}'">
                    <center> <img src="{{ asset('argon/assets/img/theme/pngfuel.com.png') }}" alt="Avatar" style="width:50%">
                    </center>
                    <div class="container">
                        <center> <h4><b>{{ tuteur.nom }} {{ tuteur.prenom }}</b></h4></center>
                        <div class="form-row col-md-12">
                            <div class="form-group col-md-10">
                            </div>
                            <div class="form-group col-md-2 float-right">
                                <a class="btn  " style="background-color: #4432a8;color: white" href="{{ path('tuteur_edit', { 'id': tuteur.id }) }}">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}

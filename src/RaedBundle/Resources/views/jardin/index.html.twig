{% extends 'base.html.twig' %}

{% block body %}
    <h1 style="color: red">Jardins list</h1>
    <script src="//code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="{{ asset('bundles/pugxautocompleter/js/autocompleter-jqueryui.js') }}"></script>
    <center><input type="text" id="search" placeholder="CHERCHER Jardin..." style="color:#3b003b" ></center>
    <script>



        $(document).ready(function(){
            $('#search').keyup(function(){
                search_table($(this).val());
            });
            function search_table(value){
                $('#tableac tbody tr').each(function(){
                    var found = 'false';
                    $(this).each(function(){
                        if($(this).text().toLowerCase().indexOf(value.toLowerCase()) >= 0)
                        {
                            found = 'true';
                        }
                    });
                    if(found == 'true')
                    {
                        $(this).show();

                    }
                    else
                    {
                        $(this).hide();

                    }
                });
            }
        });
    </script>


    <div class="navigation">
        {{ knp_pagination_render(rec) }}
    </div>

    <table class="table table-striped table-bordered" style="width:50%" >
        <thead>
            <tr>
                <th id="tableac tbody tr"  style="color:#d971f2"> <b>Id </b></th>

                <th style="color: #1c7430"> <b>Name</b> </th>

                <th style="color:#3b003b"> <b>Description </b></th>

                <th style="color: #9c49fa"> <b>Tarif </b></th>

                <th style="color: #00A8FF"> <b>Adresse </b></th>

                <th style="color: red"> <b>Etat</b> </th>
                
                <th style="color: gold"><b> Actions</b> </th>
            </tr>
        </thead>
        <tbody>
        {% for jardin in jardins %}
            <tr>
                <td  style="color:#d971f2"><a href="{{ path('jardin_show', { 'id': jardin.id }) }}">{{ jardin.id }}</a></td>
                <td style="color: #1c7430">{{ jardin.name }}</td>
                <td style="color: #3b003b">{{ jardin.description }}</td>
                <td style="color: #9c49fa">{{ jardin.tarif }}</td>
                <td style="color: #00A8FF">{{ jardin.adresse }}</td>
                <td style="color: red">{{ jardin.etat }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('jardin_show', { 'id': jardin.id }) }}" style="color: gold"><button type="submit" value="Modifier" class="btn btn-success mr-2">Show</button></a>
                        </li>
                        <li>
                            <a href="{{ path('jardin_edit', { 'id': jardin.id }) }}" style="color: gold" ><button type="submit" value="Modifier" class="btn btn-primary">Edit</button></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>




    <ul>
        <li>
            <a href="{{ path('jardin_new') }}" style="color: red"><button type="submit" value="Modifier" class="btn btn-danger">Create a new jardin</button></a>
        </li>
    </ul>


{% endblock %}

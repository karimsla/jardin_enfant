    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ jardin.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ jardin.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ jardin.description }}</td>
            </tr>

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Club creation</h1>

<div class="col-md-6 grid-margin stretch-card" bis_skin_checked="1">
    <div class="card" bis_skin_checked="1">
        <div class="card-body" bis_skin_checked="1">
            <h4 class="card-title">Ajouter un Club</h4>
            {{ form_start(form) }}
            <form method="POST" class="forms-sample">
                <div class="form-group" bis_skin_checked="1">
                    <label for="exampleInputName1">Name</label>
                    {{ form_widget(form.name,{'attr': {'class': 'form-control'}})}}                    </div>
                <div class="form-group" bis_skin_checked="1">
                    <label for="exampleInputEmail3">Description</label>

                    {{ form_widget(form.description,{'attr': {'class': 'form-control'}})}}
                </div>
                <div class="form-group" bis_skin_checked="1">
                    <label for="exampleInputCity1">Jardin</label>
                    {{ form_widget(form.jardin,{'attr': {'class': 'form-control'}})}}
                </div>
                <div>
                    <button type="submit" class="btn btn-success mr-2">Ajouter</button>
                    <ul>
                        <li>
                            <a href="{{ path('club_index') }}">Back to the list</a>
                        </li>
                    </ul>
                </div>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>

{% endblock %}

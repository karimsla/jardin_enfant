{% extends 'base.html.twig' %}

{% block body %}
   <center> <h1>Clubs list</h1> </center>

    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td><a href="{{ path('club_show', { 'id': club.id }) }}">{{ club.id }}</a></td>
                <td>{{ club.name }}</td>
                <td>{{ club.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('club_show', { 'id': club.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('club_edit', { 'id': club.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <ul>
        <li>
            <div class="form-group col-lg-12 col-md-12 col-sm-12 text-center">
                <a href="{{ path('club_new') }}"  ><button class="theme-btn btn-style-one" type="submit" name="submit-form">create a new club</button>

                </a></div>
        </li>
    </ul>
{% endblock %}

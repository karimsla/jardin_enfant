{% extends 'base.html.twig' %}

{% block body %}
    <center><h1>affichage du Club </h1>

    <table id="example" class="table table-striped table-bordered" style="width:80%">
        <thead >
            <tr >



                <th>Photo</th>

                <th>Name</th>

                <th>Description</th>

            </tr>
        </thead>

        <tr>

            <td><img src="{{asset('images/'~club.photo)}}" width="200" height="121"> </td>
            <td>{{ club.name }}</td>
            <td>{{ club.description }}</td>
        </tr>

    </table>
<div>


    <div class=" col-md-4 col-sm-4 ">
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') and  "ROLE_RESPONSABLE" in app.user.roles %}
        <a href="{{ path('club_edit', { 'id': club.id }) }}"><button class="btn btn-info">Editer</button></a>
        {% endif %}
    </div>
    <br>
        <div class=" col-md-4 col-sm-4 ">
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') and  "ROLE_RESPONSABLE" in app.user.roles %}
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-danger">
            {{ form_end(delete_form) }}
            {% endif %}
        </div>
        <li>
            <a href="{{ path('club_index') }}">Back to the list</a>
        </li>
    </ul>
</div>
    </center>
{% endblock %}

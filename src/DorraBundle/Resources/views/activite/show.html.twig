{% extends 'base.html.twig' %}

{% block body %}
    <center>
    <h1>Activite</h1>

    <table id="example" class="table table-striped table-bordered" style="width:80% ">
        <tbody>
            <tr>

                <th>Photo</th>
                <th>Type d'activite</th>
                <th>Details</th>
                <th>Date de l'activit√©</th>


            </tr>
            <tr>

                <td><img src="{{asset('images/'~activite.photo)}}" width="200" height="121"> </td>
                <td>{{ activite.typeact }}</td>
                <td>{{ activite.detailles }}</td>
                <td>{{ activite.Date|date('Y-m-d ') }}</td>
            </tr>

        </tbody>
    </table>

<div class=" col-md-4 col-sm-4 ">
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') and  "ROLE_RESPONSABLE" in app.user.roles %}
    <a href="{{ path('activite_edit', { 'id': activite.id }) }}" ><button class="btn btn-info">Editer</button></a>
{% endif %}
</div>
    <br>
    <div class=" col-md-4 col-sm-4 ">
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') and  "ROLE_RESPONSABLE" in app.user.roles %}

            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-danger">
            {{ form_end(delete_form) }}
        {% endif %}
        </div>

        <li>
            <a href="{{ path('activite_index') }}">Back to the list</a>
        </li>
    </ul>
    </center>
{% endblock %}
